<UserControl x:Class="PlantStatusDisplay.LineStatusWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantStatusDisplay"
             mc:Ignorable="d" 
             >
    <Border Height="200" Width="400" BorderBrush="White" BorderThickness="2" 
            Background="LimeGreen" >
        <TextBox Background="Blue" HorizontalAlignment="Stretch" Foreground="Yellow" FontSize="20" 
                 FontWeight="Bold" VerticalAlignment="Top" TextWrapping="WrapWithOverflow" Text="CHR-DSD" HorizontalContentAlignment="Center"/>

    </Border>
</UserControl>
